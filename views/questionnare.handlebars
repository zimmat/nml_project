
<div class="jumbotron">
    <h1>Questionnare</h1>
  </div>

  <p id='warning'>{{messages.message}}</p>
{{#if is_admin}}
  <form class="" action="/questionnare/createQuestions" method="post">
    <div class="questions">
    Insert course: <input type="text" name="question"><br>
   <input type="submit"><br>
     </div>
  </form>
  {{else}}
  <form action="/answers/add" method="POST">
      <input type="hidden" name="employee_id" value="{{employee.employee_id}}">
      <input type="hidden" name="question_id" value="{{question.question_id}}">
  <div class="questionnare">
      <p>Would you like to go to any of the listed courses, answer with yes to those you interested in, no if you not and leave null if undecided</p>
{{#question}}
    <div>{{question}}:<select name="answer">
  <option value="Nes">Yes</option>
  <option value="No">No</option>
  <option value="Null">NULL</option>
</select></div>
    {{/question}}
    <br>
   <input type="submit"><br>
  </div>
</form>
{{/if}}
